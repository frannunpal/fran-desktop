{
  "name": "fran-desktop",
  "private": true,
  "version": "0.0.5",
  "main": "electron/main.cjs",
  "type": "module",
  "description": "FDE Fran Desktop Environment",
  "author": "Francisco Núñez Palomares (frannunpal@gmail.com)",
  "build": {
    "appId": "com.fran.desktop",
    "productName": "Fran Desktop Environment",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:electron": "tsc -b && vite build --config vite.config.electron.ts",
    "electron:dev": "bun run build:electron && mkdir -p electron/dist && cpx \"dist-electron/**/*\" electron/dist/ && electron .",
    "electron:dist:win": "bun run build:electron && mkdir -p electron/dist && cpx \"dist-electron/**/*\" electron/dist/ && electron-builder --win",
    "electron:dist:mac": "bun run build:electron && mkdir -p electron/dist && cpx \"dist-electron/**/*\" electron/dist/ && electron-builder --mac",
    "electron:dist:linux": "bun run build:electron && mkdir -p electron/dist && cpx \"dist-electron/**/*\" electron/dist/ && electron-builder --linux",
    "prepare": "husky"
  },
  "dependencies": {
    "@mantine/core": "^8.3.15",
    "@mantine/dates": "^8.3.15",
    "@mantine/hooks": "^8.3.15",
    "@tiptap/markdown": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "dayjs": "^1.11.19",
    "framer-motion": "^12.34.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-rnd": "^10.5.2",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@storybook/react": "^10.2.13",
    "@storybook/react-vite": "^10.2.13",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.11.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "cpx": "^1.5.0",
    "electron": "^40.6.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "storybook": "^10.2.13",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
